@model List<CategoryVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
    int order=0;
}

 @*<h1 class="h3 mb-4 text-gray-800">Category</h1>*@

 <div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Categories:</h1>
        <a asp-action="Create" asp-controller="Category" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>
                <th scope="col">CategoryName</th>
                <th scope="col">Logo</th>  
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@item.Id</td>
                    <td>@item.CategoryName</td>
                    
                    <td><img width=50 height=50 src="~/data/category/@item.Logo" alt="Error" /></td>
                    <td>
                        @if (item.IsDeleted)
                        {
                            <span class="text-danger">Hidden</span>
                        }
                        else
                        {
                            <span class="text-success">Active</span>
                        }
                    </td>
                    
                    
                    <td>
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                        <a asp-action="PermaDelete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Perma-Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
