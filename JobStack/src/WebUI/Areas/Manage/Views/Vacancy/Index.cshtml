@model List<VacancyVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Vacancies:</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>
                <th scope="col">Title Name</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@item.Id</td>
                    <td>@item.TitleName</td>
                    <td>@item.Description</td>

                    <td>
                        @if (item.IsDeleted)
                        {
                            @*<span class="text-danger">Hidden</span>*@
                            <i class="bi bi-eye-slash-fill text-danger fs-1" style="font-size: 2rem;"></i>
                        }
                        else
                        {
                            <i class="bi bi-eye-fill text-success " style="font-size: 2rem;"></i>
                            @*<span class="text-success">Active</span>*@
                        }
                    </td>


                    <td>
                        <a asp-action="Delete" asp-controller="Vacancy" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                        <a asp-action="PermaDelete" asp-controller="Vacancy" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">
                            Perma-Delete
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>