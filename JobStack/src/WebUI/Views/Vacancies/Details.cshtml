@model VacancyVM
@{
    ViewData["Title"] = "Details";
}

<!-- Start -->
<section class="bg-slate-50 dark:bg-slate-800 md:py-24 py-16">
    <div class="container mt-10">
        <div class="grid md:grid-cols-12 grid-cols-1 gap-[30px]">
            <div class="lg:col-span-8 md:col-span-6">
                <div class="md:flex items-center p-6 shadow dark:shadow-gray-700 rounded-md bg-white dark:bg-slate-900">
                    <img src="~/data/company/@Model.Company.CompanyLogo" class="rounded-full h-28 w-28 p-4 bg-white dark:bg-slate-900 shadow dark:shadow-gray-700" alt="">

                    <div class="md:ms-4 md:mt-0 mt-6">
                        <h5 class="text-xl font-semibold">@Model.TitleName</h5>
                        <div class="mt-2">
                            <span class="text-slate-400 font-medium me-2 inline-block"><i class="uil uil-building text-[18px] text-emerald-600 me-1"></i> @Model.Company.CompanyName</span>
                            <span class="text-slate-400 font-medium me-2 inline-block"><i class="uil uil-map-marker text-[18px] text-emerald-600 me-1"></i> @Model.City.CityName, @Model.Country.Name</span>

                            <span class="text-slate-400 font-medium me-2 inline-block"><a asp-controller="JobApplies" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-sm bg-emerald-600 hover:bg-emerald-700 border-emerald-600 dark:border-emerald-600 text-white rounded-md">See Apply</a></span>
                        </div>
                    </div>
                </div>

                <h5 class="text-lg font-semibold mt-6">Job Description:</h5>

                <p class="text-slate-400 mt-4">@Model.Description .</p>
                @*<p class="text-slate-400 mt-4">This means that Lorem Ipsum cannot accurately represent, for example, German, in which all nouns are capitalized. Thus, Lorem Ipsum has only limited suitability as a visual filler for German texts. If the fill text is intended to illustrate the characteristics of different typefaces.</p>
                <p class="text-slate-400 mt-4">It sometimes makes sense to select texts containing the various letters and symbols specific to the output language.</p>*@

                <h5 class="text-lg font-semibold mt-6">Responsibilities and Duties: </h5>
                <p class="text-slate-400 mt-4">It sometimes makes sense to select texts containing the various letters and symbols specific to the output language.</p>
                <ul class="list-none">
                    
                    @foreach (var item in ViewBag.Responsibilits)
                    {
                      <li class="text-slate-400 mt-2"><i class="uil uil-arrow-right text-emerald-600 me-1"></i>@item</li>
                        
                    }

                   
                </ul>

                <h5 class="text-lg font-semibold mt-6">Required Experience, Skills and Qualifications: </h5>
                <p class="text-slate-400 mt-4">It sometimes makes sense to select texts containing the various letters and symbols specific to the output language.</p>
                <ul class="list-none">
                    @foreach (var item in ViewBag.Skills)
                    {
                      <li class="text-slate-400 mt-2"><i class="uil uil-arrow-right text-emerald-600 me-1"></i>@item</li>
                        
                    }
                    
                </ul>

                <div class="mt-5">
                    <a asp-controller="JobApplies" asp-action="SendApply" asp-route-id="@Model.Id"  class="btn rounded-md bg-emerald-600 hover:bg-emerald-700 border-emerald-600 hover:border-emerald-700 text-white md:ms-2 w-full md:w-auto">Apply Now</a>
                </div>
            </div><!--end col-->

            <div class="lg:col-span-4 md:col-span-6">
                <div class="shadow dark:shadow-gray-700 rounded-md bg-white dark:bg-slate-900 sticky top-20">
                    <div class="p-6">
                        <h5 class="text-lg font-semibold">Job Information</h5>
                    </div>
                    <div class="p-6 border-t border-slate-100 dark:border-t-gray-700">
                        <ul class="list-none">
                            <li class="flex items-center">
                                <i data-feather="user-check" class="h-5 w-5"></i>

                                <div class="ms-4">
                                    <p class="font-medium">Employee Type:</p>
                                    <span class="text-emerald-600 font-medium text-sm">@Model.JobType.TypeName</span>
                                </div>
                            </li>

                            <li class="flex items-center mt-3">
                                <i data-feather="map-pin" class="h-5 w-5"></i>

                                <div class="ms-4">
                                    <p class="font-medium">Location:</p>
                                    <span class="text-emerald-600 font-medium text-sm">@Model.City.CityName, @Model.Country.Name</span>
                                </div>
                            </li>

                            <li class="flex items-center mt-3">
                                <i data-feather="monitor" class="h-5 w-5"></i>

                                <div class="ms-4">
                                    <p class="font-medium">Category:</p>
                                    <span class="text-emerald-600 font-medium text-sm">@Model.Category.CategoryName</span>
                                </div>
                            </li>

                            <li class="flex items-center mt-3">
                                <i data-feather="briefcase" class="h-5 w-5"></i>

                                <div class="ms-4">
                                    <p class="font-medium">Experience:</p>
                                    <span class="text-emerald-600 font-medium text-sm">@Model.Experience</span>
                                </div>
                            </li>

                            @*<li class="flex items-center mt-3">
                                <i data-feather="book" class="h-5 w-5"></i>

                                <div class="ms-4">
                                    <p class="font-medium">Qualifications:</p>
                                    <span class="text-emerald-600 font-medium text-sm">MCA</span>
                                </div>
                            </li>*@

                            <li class="flex items-center mt-3">
                                <i data-feather="dollar-sign" class="h-5 w-5"></i>

                                <div class="ms-4">
                                    <p class="font-medium">Salary:</p>
                                    <span class="text-emerald-600 font-medium text-sm">@Model.Salary</span>
                                </div>
                            </li>

                            <li class="flex items-center mt-3">
                                <i data-feather="clock" class="h-5 w-5"></i>

                                <div class="ms-4">
                                    <p class="font-medium">Date posted:</p>
                                    <span class="text-emerald-600 font-medium text-sm">@Model.Created.Day @Model.Created.Month @Model.Created.Year</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div><!--end col-->
        </div><!--end grid-->
    </div><!--end container-->

    <div class="container lg:mt-24 mt-16">
        <div class="grid grid-cols-1 pb-8 text-center">
            <h3 class="mb-4 md:text-[26px] md:leading-normal text-2xl leading-normal font-semibold">Related Vacancies</h3>

            <p class="text-slate-400 dark:text-slate-300 max-w-xl mx-auto">Search all the open positions on the web. Get your own personalized salary estimate. Read reviews on over 30000+ companies worldwide.</p>
        </div><!--end grid-->

